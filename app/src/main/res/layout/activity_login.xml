<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<master.flame.danmaku.ui.widget.DanmakuView
		android:id="@+id/login_danmaku"
		android:layout_width="match_parent"
		android:layout_height="match_parent"/>
    
    <ImageButton
        android:layout_width="wrap_content"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_height="wrap_content"
        android:id="@+id/quit"
        android:src="@drawable/ic_left_arrow"/>

	<com.losthiro.ottohubclient.view.WaveView
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:gravity="center"
		android:elevation="4dp"
		android:background="@drawable/video_card_bg"
		android:padding="10dp"
		android:layout_margin="10dp">

		<com.losthiro.ottohubclient.view.RoundImageView
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:layout_marginBottom="10dp"
			android:elevation="4dp"
			android:id="@+id/login_user_avatar"
			android:src="@drawable/ic_need_login"/>

		<TextView
			android:layout_marginBottom="10dp"
			android:shadowColor="#FFC4C4C4"
			android:textColor="@color/colorAccent"
			android:shadowDx="4"
			android:shadowRadius="4"
			android:shadowDy="4"
			android:textStyle="bold"
			android:text="那我缺的登录这块？"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/login_user_name"/>

		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="登录"
			android:layout_marginBottom="10dp"
			android:textColor="#FFFFFFFF"
			android:shadowDy="4"
			android:shadowDx="4"
			android:shadowRadius="4"
			android:shadowColor="#FFC4C4C4"
			android:elevation="4dp"
			android:background="@drawable/btn_bg"
			android:onClick="loginDialog"/>

		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="注册"
			android:textColor="#FFFFFFFF"
			android:shadowDy="4"
			android:shadowDx="4"
			android:shadowRadius="4"
			android:shadowColor="#FFC4C4C4"
			android:elevation="4dp"
			android:background="@drawable/btn_bg"
			android:id="@+id/login_register_btn"/>

		<Button
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="冲刺"
			android:shadowDy="4"
			android:shadowDx="4"
			android:shadowRadius="4"
			android:shadowColor="#FFC4C4C4"
			android:visibility="gone"
			android:layout_marginTop="10dp"
			android:textColor="#FFFFFFFF"
			android:elevation="4dp"
			android:background="@drawable/btn_bg"
			android:id="@+id/login_quit_view"/>

	</com.losthiro.ottohubclient.view.WaveView>

</RelativeLayout>

