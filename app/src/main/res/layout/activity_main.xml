<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_drawer_layout">

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/main_pager"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:background="#FFE5E5E5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/video_card_bg"
                android:elevation="4dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1.0"
                    android:textColor="@color/colorAccent"
                    android:text="首页"
                    android:drawableTop="@drawable/ic_home_black"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:tag="main"
                    android:shadowRadius="4"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowColor="#FFC4C4C4"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1.0"
                    android:textColor="@color/colorSecondary"
                    android:text="动态"
                    android:drawableTop="@drawable/ic_blog_black"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:tag="blog"
                    android:shadowDy="4"
                    android:shadowDx="4"
                    android:shadowRadius="4"
                    android:shadowColor="#FFC4C4C4"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1.0"
                    android:textColor="@color/colorSecondary"
                    android:text="账户"
                    android:drawableTop="@drawable/ic_user_black"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    android:tag="account"
                    android:shadowDy="4"
                    android:shadowDx="4"
                    android:shadowRadius="4"
                    android:shadowColor="#FFC4C4C4"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:id="@+id/drawer_content"
            android:choiceMode="singleChoice"
            android:divider="@color/colorMain"
            android:dividerHeight="1dp"
            android:background="@color/colorMain"
            android:minWidth="200dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.0">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_user_cover"
                        android:adjustViewBounds="true"
                        android:minHeight="160dp"
                        android:src="@drawable/ic_def_user_cover"/>

                    <ImageButton
                        android:layout_width="wrap_content"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_down"
                        android:onClick="switchAccountDia"
                        android:layout_alignBottom="@id/main_user_cover"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_menu_list"
                    android:layout_weight="1.0"/>

            </LinearLayout>

            <TextView
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/colorSecondary"
                android:layout_gravity="bottom|center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="©Copyright2025 | APP By Hiro"
                android:singleLine="true"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>

