<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="10dp">

	<ImageView
		android:src="@drawable/ic_check_black"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="5dp"
		android:id="@+id/list_account_current"
		android:visibility="gone"
		android:layout_centerVertical="true"/>

	<com.losthiro.ottohubclient.view.RoundImageView
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:src="@drawable/ic_unlogin_user"
		android:layout_toEndOf="@id/list_account_current"
		android:id="@+id/main_user_avatar"
		android:layout_margin="5dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/list_user_name"
        android:textColor="@color/text_color"
		android:layout_marginTop="5dp"
		android:textSize="16sp"
		android:layout_toEndOf="@id/main_user_avatar"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:textColor="@color/text_color"
		android:id="@+id/list_user_info"
		android:layout_toRightOf="@id/main_user_avatar"
		android:layout_below="@id/list_user_name"
		android:layout_marginBottom="5dp"/>
    
    <View
        android:background="#FFE5E5E5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/list_user_info"/>
    
</RelativeLayout>

