<?xml version='1.0' encoding='utf-8'?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.losthiro.ottohubclient">
    <!--写入/删除您的SD卡中的内容-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--读取SD卡中的内容-->
    <uses-permission 
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"/>
    <!-- 读取共享存储空间中的图片文件 -->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <!-- 从共享存储空间读取音频文件 -->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <!-- 从共享存储空间读取视频文件 -->
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />
    <!-- 显示通知 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- 拥有完全的网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 查看网络连接 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 读取剪贴板 -->
    <uses-permission android:name="android.permission.ACCESS_CLIPBOARD" />
    <!-- 防止手机休眠 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- 运行前台服务 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- 后台播放权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".Client"
        android:allowBackup="true"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:resizeableActivity="true"
        android:requestLegacyExternalStorage="true"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="ottohub"
                    android:host="start" />
            </intent-filter>
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/client_shortcut" />
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="true"
            android:launchMode="singleTask"
            android:screenOrientation="user" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <activity
            android:name=".AccountDetailActivity"
            android:exported="true"/>

        <activity
            android:name=".SuscribeActivity"
            android:exported="true"/>

        <activity
            android:name=".FansActivity"
            android:exported="true"/>

        <activity
            android:name=".MessageActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <activity
            android:name=".MessageDetailActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <activity
            android:name=".PlayerActivity"
            android:exported="true"
            android:screenOrientation="user"
            android:hardwareAccelerated="true"
            android:configChanges="screenSize|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="ottohub"
                    android:host="play" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BlogDetailActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="ottohub"
                    android:host="blog" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SearchActivity"
            android:exported="true"
            android:launchMode="singleInstance"
            android:configChanges="keyboardHidden"/>

        <activity
            android:name=".AuditActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <activity
            android:name=".AuditViewActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <activity
            android:name=".UploadBlogActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <activity
            android:name=".UploadVideoActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <activity
            android:name=".UploadManagerActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <activity
            android:name=".InfoActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <activity
            android:name=".ErrorActivity"
            android:exported="true"
            android:launchMode="singleInstance"/>

        <meta-data
            android:name="android.max_aspect"
            android:value="4.0"/>

    </application>

</manifest>
